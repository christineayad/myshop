@model Category
@{
    ViewBag.pageTitle = "Category Management";
    ViewBag.cardTitle = "Delete Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<div class="row">
    <div class="col-md-4">
<form method="post" asp-action="DeleteCategory">
    <input hidden asp-for="Id" />
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">

        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" disabled />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
     <div class="mb-3">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" disabled />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
     <div class="mb-3">
       <button type="submit" class="btn btn-danger" >Delete</button>
       <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
</div>
</div>
@section scripts{
                <partial name="_ValidationScriptsPartial" />
}