@model IEnumerable<Category> 
@{
    ViewBag.pageTitle = "Category Management";
    ViewBag.cardTitle = "view Categories";
   // Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div><a class="btn btn-primary" asp-action="Create">Create </a></div>
<br/>

<table class=" table table-bordered table-striped" width="100%">
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
         <th>Created Date</th>
         <th>Action</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedTime</td>
            <td>
            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success mx-2">Edit</a>
                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                
            </td>
            </tr>
        }   
    </tbody>     
</table>

